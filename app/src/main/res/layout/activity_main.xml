<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:layout_alignParentEnd="true"
        android:id="@+id/toggleLanguage"
        android:background="@drawable/bg_toggle_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn=""
        android:textOff=""/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toggleLanguage"
        android:textColor="#f20"
        android:textSize="30sp"
        android:text="@string/text_title"
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="@string/text_hint_user"
        android:id="@+id/editTextUser"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="@string/text_hint_password"
        android:id="@+id/editTextPassWord"
        android:layout_marginTop="30dp"
        android:layout_below="@id/editTextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonLogin"
        android:text="@string/text_button_login"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextPassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewInfo"
        android:textColor="#00897B"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/buttonLogin"
        tools:text="User : phat123 \nPassword : 123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>